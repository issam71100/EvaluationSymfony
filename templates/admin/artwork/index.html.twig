{% extends 'base.html.twig' %}

{% block title %}Artwork index{% endblock %}

{% block body %}
    <h1>Artwork index</h1>

    <table class="table table-striped table-dark">
        <thead class="bg-primary">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Image</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for artwork in artworks %}
            <tr>
                <td>{{ artwork.id }}</td>
                <td>{{ artwork.name }}</td>
                <td>{{ artwork.description }}</td>
                <td>{{ artwork.image }}</td>
                <td class="d-flex">
                    <a class="btn btn-primary" href="{{ path('admin.artwork.show', {'id': artwork.id}) }}">show</a>
                    <a class="btn btn-warning" href="{{ path('admin.artwork.form.update', {'id': artwork.id}) }}">edit</a>
                    {{ include('admin/artwork/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary mb-5" href="{{ path('admin.artwork.form') }}">Create new</a>
{% endblock %}
