{% extends 'base.html.twig' %}

{% block title %}Artwork index{% endblock %}

{% block body %}
    <h1>Artwork index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for artwork in artworks %}
            <tr>
                <td>{{ artwork.id }}</td>
                <td>{{ artwork.name }}</td>
                <td>{{ artwork.description }}</td>
                <td>{{ artwork.image }}</td>
                <td>
                    <a href="{{ path('admin.artwork.show', {'id': artwork.id}) }}">show</a>
                    <a href="{{ path('admin.artwork.form.update', {'id': artwork.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin.artwork.form') }}">Create new</a>
{% endblock %}
