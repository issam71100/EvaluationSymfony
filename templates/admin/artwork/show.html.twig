{% extends 'base.html.twig' %}

{% block title %}Artwork
{% endblock %}

{% block body %}
	<h1>Artwork</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ artwork.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ artwork.name }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ artwork.description }}</td>
			</tr>
			<tr>
				<th>Image</th>
				<td>{{ artwork.image }}</td>
			</tr>
		</tbody>
	</table>

	<div class="d-flex mb-5">
		<a class="btn btn-primary"href="{{ path('admin.artwork.index') }}">Retour</a>
		<a class="btn btn-warning"href="{{ path('admin.artwork.form.update', {'id': artwork.id}) }}">Editer</a>
		{{ include('admin/artwork/_delete_form.html.twig') }}
	</div>

{% endblock %}
