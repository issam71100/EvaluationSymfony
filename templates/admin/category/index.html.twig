{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1 class="mb-3 mt-3 text-center">Category index</h1>

    <table class="table table-striped table-dark">
        <thead class="bg-primary">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td class="d-flex">
                    <a class="btn btn-primary"href="{{ path('category_show', {'id': category.id}) }}">show</a>
                    <a class="btn btn-warning"href="{{ path('category_edit', {'id': category.id}) }}">edit</a>
                    {{ include('admin/category/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('category_new') }}">Create new</a>
{% endblock %}
