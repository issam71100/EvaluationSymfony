{% extends 'base.html.twig' %}

{% block title %}Exposition
{% endblock %}

{% block body %}
	<h1>Exposition</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ exposition.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ exposition.name }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ exposition.description }}</td>
			</tr>
		</tbody>
	</table>
	{% for artwork in exposition.artworks %}
		{% dump artwork %}
	{% endfor %}
	<a href="{{ path('admin.exposition.index') }}">back to list</a>

	<a href="{{ path('admin.exposition.edit', {'id': exposition.id}) }}">edit</a>

	{{ include('admin/exposition/_delete_form.html.twig') }}
{% endblock %}
