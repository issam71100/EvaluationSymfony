{% extends 'base.html.twig' %}

{% block title %}Exposition index{% endblock %}

{% block body %}
    <h1>Exposition index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for exposition in expositions %}
            <tr>
                <td>{{ exposition.id }}</td>
                <td>{{ exposition.name }}</td>
                <td>{{ exposition.description }}</td>
                <td>
                    <a href="{{ path('admin.exposition.show', {'id': exposition.id}) }}">show</a>
                    <a href="{{ path('admin.exposition.edit', {'id': exposition.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin.exposition.new') }}">Create new</a>
{% endblock %}
