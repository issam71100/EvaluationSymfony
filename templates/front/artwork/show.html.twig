{% extends 'base.html.twig' %}

{% block title %}Artwork
{% endblock %}

{% block header %}
	<section class="header-image" style="background-image : url('{{ asset("uploads/img/artworks/" ~ artwork.image )}}');">
		<div class="book-text">
			<h1>{{sitetitle}}</h1>
		</div>
	</section>
{% endblock %}
{% block body %}
	<h1>Artwork</h1>

	<div class="text">
		<b>Description :</b> {{ artwork.description }}
		<b>Dessiné à :</b> {{ artwork.place.street }}, {{ artwork.place.zipCode }} {{ artwork.place.city }}, {{ artwork.place.country }}
            {% dump artwork.place  %}

    </div>
	<table class="table">
		<tbody>
			<tr></tr>
		</tbody>
	</table>

	<a href="{{ path('artwork.index') }}">Revenir à la liste des Oeuvres</a>
{% endblock %}
